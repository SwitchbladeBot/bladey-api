{
  "name": "bladey-api",
  "version": "1.0.0",
  "description": "API consumed by the Switchblade website",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-dev": "nodemon --exec node -r dotenv/config index.js",
    "test": "standard",
    "fix": "standard --fix",
    "docs": "apidoc -i src/routes/ -o src/docs/"
  },
  "apidoc": {
    "title": "Switchblade API Documentation",
    "description": "API consumed by the Switchblade website",
    "url": "https://api.switchblade.xyz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SwitchbladeBot/bladey-api.git"
  },
  "author": "Switchblade",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SwitchbladeBot/bladey-api/issues"
  },
  "homepage": "https://github.com/SwitchbladeBot/bladey-api#readme",
  "dependencies": {
    "cors": "^2.8.4",
    "discord.js": "^11.4.2",
    "express": "^4.16.3",
    "mongoose": "^5.3.0",
    "mongoose-findorcreate": "^3.0.0",
    "node-fetch": "^2.2.0",
    "transform-props": "^1.0.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "dotenv": "^6.0.0",
    "nodemon": "^1.18.4",
    "standard": "^11.0.1"
  },
  "standard": {
    "ignore": [
      "/src/docs/**/*.js"
    ]
  }
}
